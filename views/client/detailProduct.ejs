<%- include('./layouts/header.ejs') %>

<div id="app" class="bg-gray-100 py-4 min-h-[80vh]">
    <div class="container m-auto py-4">
        <div class="bg-white border rounded-md px-6 py-8">
            <div class="flex gap-3">
                <div class="w-2/5">
                    <div class="w-2/3 m-auto">
                        <img src="/uploads/<%= product.thumb %>" class="w-full" alt="">
                    </div>
                </div>
                <div class="w-3/5">
                    <div class=" px-5">
                        <h2 class=" text-2xl font-medium capitalize"><%= product.name_product %></h2>
                        <div class=" py-4 flex flex-col gap-2">
                            <p><span class="font-medium">Tác giả: </span><%= product.author %></p>
                            <p><span class="font-medium">Năm phát hành:</span> <%= product.year %></p>
                            <p>
                                <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                                <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                                <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                                <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                                <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                                (Đánh giá)</p>
                            <p><span class="font-medium">Miêu tả:</span> <%= product.description %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section>
        <div class="container m-auto py-4">
            <div class="bg-white border rounded-md px-6 py-8 w-2/3">
                <h2 class=" text-lg font-semibold">Đánh giá sản phẩm</h2>
                <div class=" flex gap-3 py-6">
                    <div class=" w-1/3">
                        <div class=" font-semibold text-center">
                            <span class="text-3xl">0</span>
                            <span>/ 5</span>
                        </div>
                        <div class="text-center">
                            <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                            <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                            <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                            <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                            <i class="fa fa-star text-gray-200 text-xs" aria-hidden="true"></i>
                            <p>(Đánh giá)</p>
                        </div>
                    </div>
                    <div class="w-2/3">
                        <div class=" w-2/3">
                            <% for(let i = 5; i >0 ; i--) {%>
                            
                            <div class="flex gap-2 items-center">
                                <p><%= i %> <i class="fa fa-star text-yellow-400 text-xs" aria-hidden="true"></i></p>
                                <div class=" flex-1 py-[1px] relative">
                                    <p class="bg-gray-100 py-[3px]"></p>
                                    <p class="absolute top-0 left-0 bg-yellow-400 py-[3px] h-full w-[0%]"></p>
                                </div>
                                <p>0%</p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div>
                    <p>Chỉ có thành viên mới có thể viết nhận xét.Vui lòng đăng nhập hoặc đăng ký.</p>
                </div>
            </div>
        </div>
    </section>
</div>

</div>

</body>
</html>